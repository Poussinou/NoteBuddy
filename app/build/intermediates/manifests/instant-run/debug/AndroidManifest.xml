<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.yoerinijs.notebuddy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="nl.yoerinijs.notebuddy.activities.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.yoerinijs.notebuddy.activities.SetupActivity"
            android:label="@string/title_activity_setup" />
        <activity
            android:name="nl.yoerinijs.notebuddy.activities.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="nl.yoerinijs.notebuddy.activities.NotesActivity"
            android:label="@string/title_activity_notes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="nl.yoerinijs.notebuddy.activities.CreditsActivity" />
        <activity
            android:name="nl.yoerinijs.notebuddy.activities.EditNoteActivity"
            android:label="@string/title_activity_create_note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="nl.yoerinijs.notebuddy.activities.SetupSecretActivity"
            android:label="@string/title_activity_setup_secret_question" />
        <activity
            android:name="nl.yoerinijs.notebuddy.activities.ProvideSecretActivity"
            android:label="@string/title_activity_provide_secret" />
    </application>

</manifest>