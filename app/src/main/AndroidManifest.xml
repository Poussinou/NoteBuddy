<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.yoerinijs.notebuddy">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SetupActivity"
            android:label="@string/title_activity_setup" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activities.NotesActivity"
            android:label="@string/title_activity_notes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.CreditsActivity" />
        <activity
            android:name=".activities.EditNoteActivity"
            android:label="@string/title_activity_create_note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SetupSecretActivity"
            android:label="@string/title_activity_setup_secret_question" />
        <activity
            android:name=".activities.ProvideSecretActivity"
            android:label="@string/title_activity_provide_secret"></activity>
    </application>

</manifest>